<MudItem
    xs="12"
    sm="6"
md="4"
lg="3"
    Style="height:100px !important;"
         >
         <div class="d-flex gap-2 p-3 rounded-2 background-dark w-100 h-100 mud-width-full align-items-center shadow-lg">
             @if(!string.IsNullOrEmpty(Icon))
             {
                 <MudIcon Icon="@Icon" Class="text-white" Size="Size.Large"></MudIcon>
             }
<div class="d-flex flex-column justify-content-center">
                    <MudText Typo="Typo.body2" Class="fw-300 text-uppercase ls-tighter text-white-50">@Title</MudText>
                <MudText Typo="Typo.h6" Class="fw-700 ls-tighter text-white">@Content</MudText>
                    </div>
         </div>

    </MudItem>

    @code {
    [Parameter]
    public string? Icon { get; set; }
    [Parameter]
    public string Title { get; set; } = "";
    [Parameter]
    public string Content { get; set; } = "";
}
